<% disable_turbo = defined?(disable_turbo) ? disable_turbo : false %>
<%= turbo_frame_tag model, target: "#{disable_turbo ? '_top' : nil}", class: 'box' do %>
    <div class="columns">
        <div class="column is-narrow is-flex is-align-items-center">
            <p>
                 <%= link_to model.name, edit_admin_model_path(model), class: "is-size-4" %>
                 <% unless defined?(collection) %>
                 from 
                 <%= link_to model.collection.name, edit_admin_collection_path(model.collection), class: "is-size-5" %>
                 <% end %>
            </p>
        </div>
        <div class="column">
            <div class="buttons is-right">
                <%= link_to 'Edit', edit_admin_model_path(model), class: "button is-link" %>
                <%= button_to('Delete', [:admin, model], method: :delete, class: "button is-danger", data: { turbo: defined?(collection) ? nil : false }) %>
            </div>
        </div>
    </div>
<% end %>