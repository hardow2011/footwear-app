<%= form_with model: [:admin, brand] do |f| %>
    <% if brand.errors.any? %>
        <div>
            <%= brand.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>
    <div> <%# TODO: find out why Delete button on _collection partial causes wrong html without this tag %>
    <div class="field">
        <label class="label"><%= f.label :name %></label>
        <div class="control">
            <%= f.text_field :name, autofocus: true, class: 'input' %>
        </div>
        <%# TODO: add overview field. Maybe make text insted of string %>
    </div>
    <div class="field">
        <label class="label"><%= f.label :overview %></label>
        <div class="control">
            <%= f.text_area :overview, class: 'textarea' %>
        </div>
    </div>
    <div class="field">
        <label class="label">Collections</label>
        <div class="control">
            <%= render partial: 'admin/collections/collection', collection: brand.collections %>
        </div>
    </div>
    <%= link_to 'Add Collection', new_admin_brand_collection_path(brand) %>
    <div class="field">
        <div class="control">
            <%#= f.submit class: 'button is-success is-pulled-right' %>
        </div>
    </div>
<% end %>
