<div class="card model-box" data-model="<%= model.brand.name %> <%= model.name %>">
  <div class="card-image">
    <figure class="image is-16by9">
      <%= image_tag model.image, alt: "#{model.name} image", title: "#{model.name} image", style: "height: 100%;object-fit: contain;" %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media is-align-items-center	">
      <div class="media-left">
        <figure>
          <a href="<%= brand_path(model.brand.handle) %>" class="image is-48x48 is-flex is-align-items-center" data-turbo="false">
            <%= image_tag model.brand.logo.variant(:thumb), alt: "#{model.brand.name} logo", title: "#{model.brand.name} logo", style: "height: 100%;object-fit: contain;" %>
          </a>
        </figure>
      </div>
      <div class="media-content is-flex is-flex-direction-column is-align-self-stretch is-justify-content-space-evenly">
        <% unless hide_brand_filter %>
          <%= link_to model.brand.name, brand_path(model.brand.handle), class: "is-size-5 mb-1 is-link", data: { turbo: false } %>
        <% end %>
        <p class="title is-size-4"><%= model.name %></p>
      </div>
    </div>

    <div class="content">
      <p><b>Weight:</b> <%= model.weight %> gr / <%= model.weight(to_oz = true) %> oz</p>
      <p><b>Heel to toe drop:</b> <%= model.heel_to_toe_drop %> mm</p>
      <%= render partial: 'models/cushioning', locals: { cushioning_level: model.tags[:cushioning], cushioning_name: model.cushioning_name } %>
      <%= render partial: 'models/apma_accepted', locals: { apma_accepted: model.apma_accepted  } %>
    </div>
  </div>
</div>