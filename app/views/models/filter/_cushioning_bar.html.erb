<% cushioning_level = Model::CUSHIONING_OPTIONS.with_indifferent_access[cushioning] %>
<div class="grid is-gap-1">
  <% 3.times do |t| %>
    <% if t+1 <= cushioning_level %>
      <progress class="progress is-success" value="100" max="100"></progress>
    <% else %>
      <progress class="progress is-success" value="0" max="100"></progress>
    <% end %>
  <% end %>
</div>